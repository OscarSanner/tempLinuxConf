# Scaling for nVidia
exec_always "xrandr --output eDP-1-1 --scale '1.6x1.6'"
# Scaling for Intel
exec_always "xrandr --output eDP1 --scale '1.6x1.6'"
# Set kb-layout to se
exec "setxkbmap -layout se"
# Set scrolling direction
exec "xinput set-prop 13 'libinput Natural Scrolling Enabled'  1"
# Set touchpad accel
exec "xinput set-prop 13 'libinput Accel Speed' 0.7"
# Set touchpad tap
exec "xinput set-prop 13 'libinput Tapping Enabled' 1"
# Enable touch while typing
exec "xinput set-prop 13 'libinput Disable While Typing Enabled' 0"
# Start picom compositor as well as feh. Delay to wait for xrandr to set scaling corectly
exec --no-startup-id  ~/scripts/picomStart.sh
